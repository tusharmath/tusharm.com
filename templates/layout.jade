!!! 5
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='google-site-verification', content='M2S6XRgNZy5AWcjY2MUVhaCDJ8uDRDkHfly4lnaz-lI')
			meta(name='viewport', content='width=device-width')
			title
				block title
					= locals.name
			link(rel='alternate', href=locals.url+'/feed.xml', type='application/rss+xml', title=locals.description)
			link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic|Anonymous+Pro:400,700,400italic,700italic|Merriweather:400,700,300')
			link(rel='stylesheet', href='css/main.css', type="text/css")
	body(class=bodyclass)
		header.header
			div.content-wrap
				block header
					div.logo
						h1
							a(href=locals.url)= locals.name
						p.description= locals.description
		div#content
			div.content-wrap
				block content
					h2 Welcome to zombocom!
		footer
			div.content-wrap
				block footer
					section.about
						!=contents['about.md'].html						
						br
						a(href="https://twitter.com/tusharmath", class="twitter-follow-button", data-show-count="false") Follow @tusharmath
						iframe(src='http://ghbtns.com/github-btn.html?user=tusharmath&type=follow', allowtransparency='true', frameborder='0', scrolling='0', width='160', height='20')

					section.copy
						p &copy; #{ new Date().getFullYear() } #{ locals.owner }
							//- please leave the "powered by" if you use the design
		script(src='js/analytics.js')