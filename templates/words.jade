
extends layout

block append vars
	- bodyclass = 'article-detail'

block prepend title
	| #{ page.title + " - "}

block header
	include author
	h1= page.title
	p.author
		| #{ "Written by " }
		mixin author(page.metadata.author)

block content
	article.article
	section.content
		each item in page.metadata.mnemonicsdata
			div.word
				strong
					= item.word + ': '
				= item.meaning	
				.mnemonics
					= item.mnemonics
		
block prepend footer
	div.nav
	a(href=contents.index.url) Â« Full blog
	div(id='disqus_thread')
	script(src='/js/disqus.js')